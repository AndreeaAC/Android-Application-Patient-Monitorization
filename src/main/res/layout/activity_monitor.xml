<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:text="Introduceți CNP-ul pacientului care este monitorizat:"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/cnp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pacient"
        android:layout_width="match_parent"
        android:text="spre pagina pacientului"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Adaugati un nou pacient"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/adaugare"
        android:layout_width="match_parent"
        android:text="spre pagina de adăugare"
        android:layout_height="wrap_content" />

</LinearLayout>
